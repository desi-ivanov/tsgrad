{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDirs": ["./src", "./examples"],
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./examples/**/*.ts"]
}
